
@{
    Layout = null;
    ViewBag.Title = "Tabla de Multiplicar";
}

<h2>Tabla de Multiplicar</h2>

<form method="post">
    <label for="numero">Introduce un número:</label>
    <input type="number" id="numero" name="numero" required/>
    <button type="submit">Generar Tabla</button>
</form>

@if (ViewBag.Numero != null)
{
    int numero = ViewBag.Numero;
    <h3>Tabla del @numero</h3>
    <table border="1">
        <thead>
            <tr>
                <th>Multiplicador</th>
                <th>Resultado</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 1; i <= 25; i++)
                {
                    <tr>
                        <td>@i</td>
                        <td>@(i * numero)</td>
                    </tr>
                }
        </tbody>
    </table>
}

